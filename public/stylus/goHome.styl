//头部样式
header
  width 100%
  height 70px
  background #fff
  border-bottom 1px solid #e5e5e5
  &.on
    position fixed
    animation:headPos 1s ease;
    z-index 50
    background rgba(255,255,255,.9)
    top 0
    box-shadow: 0 0 10px #ccc;
    @keyframes headPos {
      from {
        transform translateY(-100%)
      }
      to {
        transform translateY(0)
      }
    }
  .headerWrap
    box-sizing border-box
    width 1200px
    margin 0 auto
    height 100%
    z-index  999
    padding  2.5px 15px
    overflow hidden
    .navLeft
      height 100%
      float left
      a
        width 280px
        height 100%
        display block
        position relative
        img
          position absolute
          top 0
          bottom 0
          left 0
          right 0
          margin auto
    .navRight
      height 100%
      float right
      ul
        height 100%
        line-height 70px
        li
          margin 0
          float left
          padding-right 30px
          &.first
            box-sizing border-box
            padding 0 15px
            margin-right 50px
            a
              span
                color #4e4e4e
                font-weight bold
              img
                vertical-align middle
          a
            color #4e4e4e
            font-weight bold
            &:hover
              color #e94840
          &.shangjia
            a
              width 64px
              height 20px
              color #fff
              background #e94840
              padding 4px 6px
              border-radius 5px




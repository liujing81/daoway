//中间部分
.centerWrap
  width 1200px
  overflow hidden
  margin 0 auto
  margin-top 22px
  .centerLeft
    float left
    margin-bottom 50px
    width 960px
    background #fff
    h3
      border-bottom 1px solid #e5e5e5
      margin-left 3%
      height 60px
      line-height 60px
      span
        border-bottom 4px solid #fb474f
        padding-bottom 16px
        cursor pointer
        a
          color #121212
          font-size 16px
      i
        font-style normal
        color #121212
        margin-left 15px
        font-size 14px
    a:nth-child(2)
      display block
      height 201px
      border-bottom 1px solid #e5e5e5
      cursor pointer
      &:hover
        background-color #f8f8f8
      img
        margin 25px
        border 1px solid #e5e5e5
        float left
        vertical-align middle
        width 150px
        height 150px
      .text
        margin-top 25px
        width: 64%;
        float: left;
        p:nth-child(1)
          font-size 18px
          color #1d1515
          line-height 42px
          height 42px
        p:nth-child(2)
          color #929292
          line-height 42px
          height 42px
          font-size 14px
        .price
          margin-top 20px
          line-height 42px
          height 42px
          >b
            font-size 30px
            color #fc545e
            font-weight 700
            em
              font-style normal
              font-size 14px
              font-weight 700
          >span
            margin-left 20px
            font-size 14px
            color #898989
            em
              font-style normal
              text-decoration line-through
              font-size 14px
      .yishou
        display inline-block
        margin-top 150px
        color #929292
        font-size 14px
    .blankBox
      background #f8f8f8
      height 70px
    .company
      span
        display inline-block
        height 40px
        line-height 40px
        font-size 18px
        margin 10px 25px
      img
        display inline-block
        margin-left -20px
      p
        line-height 28px
        margin 0 25px 25px
        font-size 16px


    .commentList
      .commentItem
        width 96%
        border-bottom 1px solid #e5e5e5
        margin 0 3%
        padding-top 20px
        img
          border-radius 6px
          display inline-block
          vertical-align top
          width 40px
          height 40px

        ul
          display inline-block
          margin-left 20px
          width 92%
          li
            border none
            width auto
            height auto
            display block
            padding 0
            line-height 28px
            margin 0
            span
              width 70px
              margin-left 0
              img
                width 10px
                height 10px
                vertical-align middle
            em
              font-style normal
              margin-left 10px
              font-size 14px

            &.commentdetail
              line-height 26px
              font-size 16px
              margin-bottom 15px

            &.commentposition
              height 40px
              color #898989
              font-size 14px
              img
                margin-right 10px
                vertical-align middle
                width 9px
                height 11px
    .fenye
      width 100%
      margin 0 auto
      height 152px
      text-align center
      a
        color #121212
        width 80px
        height 30px
        line-height 30px
        font-size 14px
        border 1px solid #e5e5e5
        display inline-block
        margin 50px 5px
        background #fff
        &.greycolor
          color #929292
      .showPage
        display inline-block
        a
          height 30px
          line-height 30px
          border-radius 0
          font-size 14px
          color #121212
          display inline-block
          width 32px
          &.active
            background #fe454a
            color #fff
  .centerRight
    margin-left 10px
